<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/styles.css">

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">React with APIs</h1>
    <hr>
    <p class="col-md-8 fs-4">
      Making API calls from a React application | 
      @if (ViewBag.IsComplete == true)
      {
        <em>✔️ Lesson Completed</em>
      } else if (ViewBag.IsComplete == false)
      {
        <em>Incomplete</em>
      }    
    </p>
    <div class="content">
      <div class="col-md-12">
          <div class="h-100 p-5 text-white bg-dark rounded-3">
            <h2>Making an API call with fetch()</h2>
            <p>
              CONTENT
              @if (ViewBag.IsComplete == true)
              {
                @using (Html.BeginForm())
                {
                  <input type="submit" value="✔️ Lesson Completed" class="btn btn-success"/>
                }
              } else if (ViewBag.IsComplete == false)
              {
                @using (Html.BeginForm())
                {
                  <input type="submit" value="Mark Complete" class="btn btn-info"/>
                }
              }
              <br>
              <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
                <form method="get" action="/Home/Overview">
                  <button class="btn btn-outline-light" type="submit" >⇦ Previous Lesson</button>
                </form>
                <form method="get" action="/API/Lesson2">
                  <button class="btn btn-outline-light" type="submit" >Next Lesson ⇨</button>
                </form>
              </div>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>